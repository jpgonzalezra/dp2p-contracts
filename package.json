{
  "name": "dp2p",
  "version": "1.0.0",
  "files": [
    "contracts",
    "test"
  ],
  "scripts": {
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solium -d .",
    "lint:sol:fix": "solium -d . --fix",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "build-contracts": "sol-merger \"./contracts/*.sol\" ./build",
    "test": "npm run ganache-cli:dev && truffle test --network rpc",
    "ganache-cli:dev": "scripts/ganache-cli.sh --scripts-prepend-node-path"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jpgonzalezra/dp2p.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts"
  ],
  "author": "jpgonzalezra and shuffledex",
  "license": "",
  "bugs": {
    "url": "https://github.com/dp2p/dp2p/issues"
  },
  "homepage": "https://github.com/dp2p/dp2p",
  "devDependencies": {
    "bn-chai": "1.0.1",
    "chai": "4.2.0",
    "dotenv": "8.2.0",
    "eslint": "4.19.1",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.17.1",
    "eslint-plugin-node": "5.2.1",
    "eslint-plugin-promise": "3.8.0",
    "eslint-plugin-standard": "3.1.0",
    "eth-gas-reporter": "0.2.17",
    "eth-sig-util": "2.5.3",
    "ganache-cli": "6.4.3",
    "sol-merger": "3.1.0",
    "solium": "1.2.4",
    "truffle": "5.0.12",
    "truffle-hdwallet-provider": "1.0.17",
    "truffle-plugin-verify": "0.3.11"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.1.0",
    "promisify": "^0.0.3"
  }
}
